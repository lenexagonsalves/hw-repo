public class FilterIntegerElements implements Filter<Integer> {
    public static int[] filter(int[] a, Filter f) {
        //adds to counter of accepted ints by iterating through array a to find required length
        int counter = 0;
        for (Integer n : a) {
            if (f.accept(n)) {
                counter++;
            }
        }

        //adds to array of integers if they are accepted
        int[] integers = new int[counter];
        int index = 0;
        for (Integer n : a) {
            if (f.accept(n)) {
                integers[index++] = n;
            }
        }
        return integers;
    }
}
